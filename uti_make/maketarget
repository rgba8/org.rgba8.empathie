CXXFLAGS    +=  -Wnon-virtual-dtor
CXXFLAGS    +=  -Wreorder
CXXFLAGS    +=  -Woverloaded-virtual
CXXFLAGS    +=  -Wsign-promo
CXXFLAGS    +=  -Wchar-subscripts
CXXFLAGS    +=  -Wcomment
CXXFLAGS    +=  -Wformat
CXXFLAGS    +=  -Wformat-y2k
CXXFLAGS    +=  -Wformat-nonliteral
